{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Data source",
  "type": "object",
  "properties": {
    "kind": {
      "type": "string",
      "enum": [
        "broadcasts",
        "property",
        "variable"
      ]
    },
    "value": {
      "type": "string"
    },
    "variableType": {
      "type": "string",
      "enum": [
        "Float",
        "Any",
        "Json",
        "Color",
        "Bool",
        "Enum"
      ]
    }
  },
  "required": [
    "kind",
    "value"
  ]
}
