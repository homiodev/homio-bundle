{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "toggleType": {
      "title": "Button type",
      "type": "string",
      "default": "Regular",
      "enum": [
        "Regular",
        "Slide"
      ]
    },
    "showAxisX": {
      "type": "boolean",
      "default": "true"
    },
    "showAxisY": {
      "type": "boolean",
      "default": "true"
    },
    "pointBorderColor": {
      "title": "Point border color",
      "type": "string"
    },
    "showChartFullScreenButton": {
      "type": "boolean",
      "default": "true"
    },
    "chart": {
      "type": "object",
      "properties": {
        "source": {
          "$ref": "/schema-source.json"
        },
        "stepped": {
          "title": "Step Interpolation",
          "type": "string",
          "enum": [
            "False",
            "True",
            "Before",
            "After",
            "Middle"
          ],
          "default": "False"
        },
        "fill": {
          "title": "How to fill the area under the line",
          "type": "string",
          "enum": [
            "Start",
            "End",
            "Origin",
            "Disabled",
            "Stack"
          ],
          "default": "Origin"
        },
        "lineBorderWidth": {
          "title": "The line width (in pixels)",
          "type": "integer",
          "default": "2"
        },
        "color": {
          "title": "Chart color",
          "type": "string"
        },
        "aggregateFunc": {
          "type": "string",
          "enum": [
            "None",
            "First",
            "Last",
            "Min",
            "Max",
            "Sum",
            "Count",
            "Average",
            "Median"
          ],
          "default": "Average"
        },
        "opacity": {
          "title": "Specify chart fill opacity applied to Chart color",
          "type": "integer",
          "default": "50"
        },
        "height": {
          "title": "Chart height in % of parent container",
          "type": "integer",
          "default": "30"
        },
        "smoothing": {
          "type": "boolean",
          "default": "true"
        },
        "fillEmptyValues": {
          "title": "Fill empty values",
          "type": "boolean",
          "default": "false"
        },
        "min": {
          "title": "Minimum chart value",
          "type": "integer"
        },
        "max": {
          "title": "Maximum chart value",
          "type": "integer"
        }
      },
      "required": [
        "source"
      ]
    },
    "valueOnClick": {
      "title": "Value to send on click",
      "type": [
        "string",
        "number"
      ]
    },
    "valueOnDoubleClick": {
      "title": "Value to send on dbClick",
      "type": [
        "string",
        "number"
      ]
    },
    "valueOnHoldClick": {
      "title": "Value to send when press and hold button",
      "type": [
        "string",
        "number"
      ]
    },
    "valueOnHoldReleaseClick": {
      "title": "Value to send when press released",
      "type": [
        "string",
        "number"
      ]
    },
    "pushSource": {
      "$ref": "/schema-source.json"
    },
    "pushConfirmMessage": {
      "type": "string"
    },
    "animation": {
      "type": "object",
      "properties": {
        "op": {
          "type": "string"
        },
        "value": {
          "type": "integer"
        },
        "color": {
          "type": "string"
        }
      },
      "required": [
        "op",
        "value",
        "color"
      ]
    }
  }
}
