{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "version": {
      "description": "Specify file version",
      "type": "string"
    },
    "devices": {
      "type": "array",
      "description": "Device list",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Uses only in json file to distinguish devices by functionality",
            "type": "string"
          },
          "model": {
            "title": "List of device's model to have same widgets/icons/etc...",
            "type": "array",
            "items": [
              {
                "type": "string"
              }
            ]
          },
          "icon": {
            "type": "string"
          },
          "iconColor": {
            "type": "string"
          },
          "widgets": {
            "title": "Describe widgets that able to create in context menu for device",
            "type": "array",
            "items": [
              {
                "$ref": "/schema-widget.json"
              }
            ]
          }
        },
        "required": [
          "name",
          "model"
        ]
      }
    }
  },
  "title": "JSON schema for the zigbee devices widget configuration file",
  "type": "object"
}
