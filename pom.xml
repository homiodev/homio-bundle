<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <artifactId>touchhome-bundle</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <forceJavacCompilerUse>true</forceJavacCompilerUse>
          <release>11</release>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <configuration>
              <outputDirectory>${project.build.directory}</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/resources</directory>
                </resource>
              </resources>
            </configuration>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <id>copy-config-files</id>
            <phase>package</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
            <id>attach-sources</id>
          </execution>
        </executions>
        <groupId>org.apache.maven.plugins</groupId>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <artifactId>spring-security-core</artifactId>
      <groupId>org.springframework.security</groupId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <artifactId>touchhome-common</artifactId>
      <groupId>org.touchhome</groupId>
      <scope>provided</scope>
      <version>1.0</version>
    </dependency>
    <dependency>
      <artifactId>touchhome-hquery</artifactId>
      <groupId>org.touchhome</groupId>
      <scope>provided</scope>
      <version>1.0</version>
    </dependency>
    <dependency>
      <artifactId>dbus-java</artifactId>
      <groupId>com.github.hypfvieh</groupId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <artifactId>httpclient</artifactId>
      <groupId>org.apache.httpcomponents</groupId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <artifactId>commons-codec</artifactId>
      <groupId>commons-codec</groupId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <artifactId>throwing-function</artifactId>
      <groupId>com.pivovarit</groupId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <artifactId>touchhome-bundle-api</artifactId>
      <groupId>org.touchhome</groupId>
      <scope>provided</scope>
      <version>${bundle-api.version}</version>
    </dependency>
    <dependency>
      <artifactId>json</artifactId>
      <groupId>org.json</groupId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <artifactId>jSerialComm</artifactId>
      <groupId>com.fazecast</groupId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <artifactId>uom-se</artifactId>
      <groupId>tec.uom</groupId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <artifactId>jakarta.ws.rs-api</artifactId>
      <groupId>jakarta.ws.rs</groupId>
    </dependency>
    <dependency>
      <artifactId>commons-compress</artifactId>
      <groupId>org.apache.commons</groupId>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <groupId>org.touchhome.bundle</groupId>

  <modelVersion>4.0.0</modelVersion>

  <modules>
    <module>raspberry</module>
    <module>telegram</module>
    <module>zigbee</module>
    <module>cloud</module>
    <module>bluetooth</module>
    <module>xaomi</module>
    <module>camera</module>
  </modules>
  <packaging>pom</packaging>

  <parent>
    <artifactId>touchhome-dependency</artifactId>
    <groupId>org.touchhome</groupId>
    <version>2.4.4</version>
  </parent>

  <properties>
    <bundle-api.version>1.2.1-SNAPSHOT</bundle-api.version>
  </properties>

  <scm>
    <connection>scm:git:git://github.com/github.com/touchhome/${project.artifactId}.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/touchhome/${project.artifactId}.git</developerConnection>
    <tag>HEAD</tag>
    <url>https://github.com/touchhome/${project.artifactId}</url>
  </scm>

  <url>https://github.com/touchhome/touchhome-bundle</url>

  <version>1.2.1-SNAPSHOT</version>
</project>
